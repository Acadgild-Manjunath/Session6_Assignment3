<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.acadgild.com.session6_assignment3.ListFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/txtName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:text="Name"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_marginStart="12dp"
        android:layout_alignBottom="@+id/txtDescription"
        android:layout_toEndOf="@+id/imageFlag1"
        android:layout_marginBottom="10dp" />

    <TextView
        android:text="Description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtDescription"
        android:textSize="18sp"
        android:layout_marginBottom="30dp"
        android:layout_alignBottom="@+id/imageFlag1"
        android:layout_alignStart="@+id/txtName"
        android:layout_marginStart="10dp" />

    <ImageView
        android:id="@+id/imageFlag1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="30dp"
        android:src="@drawable/india"
        android:layout_marginTop="3dp"
        android:layout_marginStart="17dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
